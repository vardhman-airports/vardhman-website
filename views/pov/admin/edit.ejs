<%- include('../../partials/header') %>
<br><br><br><br><br>
<link rel="stylesheet" href="/css/admin.css">

<div class="admin-container">
        <div class="admin-header">
            <h1>Edit Post</h1>
            <a href="/pov/admin" class="btn-secondary">Back to Dashboard</a>
        </div>
        
        <div class="admin-content">
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error"><%= error %></div>
            <% } %>
            
            <form method="POST" action="/pov/admin/edit/<%= post.id %>" enctype="multipart/form-data" class="post-form">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="<%= post.title %>" required>
                </div>
                
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" rows="3" required><%= post.description %></textarea>
                </div>
                
                <div class="form-group">
                    <label for="author">Author:</label>
                    <input type="text" id="author" name="author" value="<%= post.author %>" required>
                </div>
                
                <div class="form-group">
                    <label for="content">Content:</label>
                    <textarea id="content" name="content" rows="10" required><%= post.content %></textarea>
                </div>
                
                <div class="form-group">
                    <label for="pdf">PDF File:</label>
                    <% if (post.pdfFile) { %>
                        <p>Current PDF: <%= post.pdfFile %></p>
                    <% } %>
                    <input type="file" id="pdf" name="pdf" accept=".pdf">
                    <small>Leave empty to keep current PDF</small>
                </div>
                
                <button type="submit" class="btn-primary">Update Post</button>
            </form>
        </div>
    </div>


<%- include('../../partials/footer') %>