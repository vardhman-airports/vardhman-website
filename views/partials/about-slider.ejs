    }

    .solutions-slider .dot.active {
        background: #2563eb;
        transform: scale(1.2);
    }

    .solutions-slider .dot:hover {
        background: #64748b;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .solutions-slider .container-fluid {
            padding: 0 1rem;
        }

