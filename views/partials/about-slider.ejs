<style>
    .solutions-slider {
        padding: 4rem 0;
        background: linear-gradient(to bottom right, #f3f4f6, #e5e7eb);
    }

    .solutions-slider .container-fluid {
        padding: 0 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .solutions-slider .slider-heading {
        font-family: "Playfair Display", Georgia, serif;
        font-weight: 700;
        text-align: center;
        padding: 0 0 3rem 0;
        margin: 0;
        color: #1e293b;
        font-size: 2.5rem;
    }

    /* Fixed Slider Container */
    .solutions-slider .slider-container {
        position: relative;
        overflow: hidden;
        border-radius: 20px;
        padding: 1rem 0;
    }

    .solutions-slider .slider-wrapper {
        display: flex;
        transition: transform 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        gap: 2rem;
        padding: 0 1rem;
    }

    /* Card Styles */
    .solutions-slider .solution-card {
        min-width: 350px;
        max-width: 400px;
        border-radius: 20px;
        overflow: hidden;
        background: #fff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        display: flex;
        flex-direction: column;
        border: 1px solid #e4e4e7;
        padding: 0;
        transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        position: relative;
        flex-shrink: 0;
    }

    .solution-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #2563eb, #7c3aed, #dc2626);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .solution-card:hover::before {
        transform: scaleX(1);
    }

    .solution-card:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    /* Image section */
    .solutions-slider .solution-card-img {
        position: relative;
        width: 100%;
        height: 220px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: white;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

    .solutions-slider .solution-card-img.integration {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .solutions-slider .solution-card-img.sitc {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

