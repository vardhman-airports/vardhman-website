        <style>

        .carousel-container {
            position: relative;
            width: 100%;
            height: 80vh;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 50%, #0f0f0f 100%);
        }

        .carousel-track {
            position: relative;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .carousel-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: grid;
            grid-template-columns: 30% 70%;
            opacity: 0;
            transform: translateX(60px);
            transition: all 1.2s cubic-bezier(0.23, 1, 0.32, 1);
            z-index: 1;
            pointer-events: none;
        }

        .carousel-slide.active {
            opacity: 1;
            transform: translateX(0);
            z-index: 10;
            pointer-events: auto;
        }

        .slide-content {
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 0 2rem 2rem 3rem;
            background: rgba(10, 10, 10, 0.85);
            position: relative;
        }

        .slide-content::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 2px;
            height: 100%;
            background: linear-gradient(180deg, #0070f3 0%, #00d4ff 100%);
        }

        .slide-category {
            font-size: 0.8rem;
            font-weight: 500;
            color: #0070f3;
            text-transform: uppercase;
            letter-spacing: 3px;
            margin-bottom: 20px;
            opacity: 0.9;
        }

        .slide-title {
            margin-top: 0;
            font-size: 3rem;
            font-weight: 800;
            color: #ffffff;
            margin-bottom: 32px;
            line-height: 0.95;
            letter-spacing: -0.03em;
        }

        .slide-title h1{
            margin-top: 0;
        }

        .slide-description {
            font-size: 1.1rem;
            color: #a0a0a0;
            margin-bottom: 50px;
            max-width: 400px;
            line-height: 1.6;
            font-weight: 300;
        }

        .slide-cta {
            display: inline-flex;
            align-items: center;
            padding: 18px 36px;
            background: transparent;
            border: 1px solid white !important;
            border-radius: 0;
            color: #ffffff !important;
            font-weight: 400;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.5s ease;
            text-decoration: none;
            width: fit-content;
            text-transform: uppercase;
            letter-spacing: 2px;
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

        .slide-cta::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(0, 112, 243, 0.2), transparent);
            transition: left 0.8s ease;
        }

        .slide-cta:hover {
            background: rgba(0, 112, 243, 0.1);
            border-color: #0070f3;
            color: #0070f3;
            transform: translateX(8px);
            text-decoration: none;
        }

        .slide-cta:hover::before {
            left: 100%;
        }

        .slide-image {
            position: relative;
            background: radial-gradient(circle at 30% 30%, rgba(0, 112, 243, 0.05) 0%, transparent 70%),
                linear-gradient(135deg, #0f0f0f 0%, #1a1a1a 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
            padding: 0;
        }

        .slide-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background:
                radial-gradient(circle at 70% 70%, rgba(0, 212, 255, 0.03) 0%, transparent 50%),
                linear-gradient(45deg, transparent 0%, rgba(0, 112, 243, 0.02) 50%, transparent 100%);
            z-index: 1;
        }

        .slide-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center;
            filter: brightness(1.2) contrast(1.1) saturate(0.9);
            position: relative;
            z-index: 2;
            transition: transform 0.8s ease;
        }

        .carousel-slide.active .slide-image img {
            transform: scale(1.02);
        }

        .carousel-nav {
            position: absolute;
            right: 80px;
            top: 50%;
            transform: translateY(-50%);
            display: flex;
            flex-direction: column;
            gap: 16px;
            z-index: 100;
        }

        .nav-dot {
            width: 8px;
            height: 40px;
            background: rgba(255, 255, 255, 0.2);
            cursor: pointer;
            transition: all 0.4s ease;
            position: relative;
        }

        .nav-dot::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 0;
            background: linear-gradient(180deg, #0070f3 0%, #00d4ff 100%);
            transition: height 0.4s ease;
        }

        .nav-dot.active::after {
            height: 100%;
        }

        .carousel-controls {
            position: absolute;
            bottom: 80px;
            left: 80px;
            display: flex;
            gap: 20px;
            z-index: 100;
        }

        .control-btn {
            width: 48px;
            height: 48px;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }

        .control-btn:hover {
            background: rgba(0, 112, 243, 0.2);
            border-color: #0070f3;
            transform: translateY(-2px);
        }

        .control-btn::after {
            content: '';
            width: 12px;
            height: 12px;
            border-top: 2px solid #ffffff;
            border-right: 2px solid #ffffff;
        }

        .prev-btn::after {
            transform: rotate(-135deg);
        }

        .next-btn::after {
            transform: rotate(45deg);
        }

        .slide-indicator {
            position: absolute;
            bottom: 80px;
            right: 80px;
            font-size: 0.8rem;
            color: #555555;
            font-weight: 400;
            z-index: 100;
            letter-spacing: 1px;
        }

        .current-slide {
